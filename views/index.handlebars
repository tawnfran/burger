<h1>Burgers</h1>

<h2>Burgers that are not devoured!</h2>

<ul>
  {{#each burgers}}
  {{#unless this.devoured}}
  <p>{{ this.name }}</p>
  <button class="devour-button" type="submit" data-id={{this.id}} data-devoured={{devoured}}>Devour it!</button>
  {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are devoured!</h2>

<ul>
  {{#each burgers}}
  {{#if this.devoured}}
  <p> {{ this.name }} </p>
    <button class="delete-button" type="submit" data-id={{this.id}}>Delete it!</button>

  {{/if}}
  {{/each}}
</ul>


<form class="create-form">
  <div class="form-group">
    <label for="bn">Burger Name:</label>
    <input type="text" id="burgerInput" name="name">
    <button class="submit-button" type="submit" data-id={{this.id}} data-devoured={{devoured}}>Submit</button>
  </div>
</form>